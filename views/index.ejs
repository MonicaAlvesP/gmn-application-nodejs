<%- include('partials/header') %>

  <section class="hero">
    <div class="container">
      <h1>
        <%= titulo %>
      </h1>
      <p>
        <%= mensagem %>
      </p>
      <a href="/produtos" class="btn">
        <i class="fas fa-shopping-cart"></i> Ver Produtos
      </a>
    </div>
  </section>

  <section class="container">
    <div class="section-title">
      <h2>Produtos em Destaque</h2>
      <p>Confira nossa seleção especial de produtos Red Dragon</p>
    </div>

    <div class="produtos-container">
      <% produtosDestaque.forEach(function(produto) { %>
        <div class="produto-card fade-in">
          <img src="<%= produto.imagem %>" alt="<%= produto.nome %>" onerror="this.src='/img/placeholder-produto.jpg'">
          <span class="categoria">
            <%= produto.categoria %>
          </span>
          <h3>
            <%= produto.nome %>
          </h3>
          <p class="descricao">
            <%= produto.descricao %>
          </p>
          <div class="preco">
            <%= produto.preco %>
          </div>
          <a href="/produto/<%= produto.id %>" class="btn" style="width: 100%; text-align: center;">
            <i class="fas fa-eye"></i> Ver Detalhes
          </a>
        </div>
        <% }); %>
    </div>

    <div class="text-center mt-2">
      <a href="/produtos" class="btn btn-secondary">
        <i class="fas fa-th"></i> Ver Todos os Produtos
      </a>
    </div>
  </section>

  <section class="destaque">
    <div class="container">
      <h2><i class="fas fa-dragon"></i> Por que escolher a Red Dragon?</h2>
      <p>Qualidade superior, tecnologia de ponta e o melhor atendimento do mercado.
        Somos especialistas em produtos tecnológicos há mais de 10 anos.</p>
    </div>
  </section>

  <%- include('partials/footer') %>